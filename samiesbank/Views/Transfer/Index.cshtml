@model samiesbank.Models.ViewModels.TransferViewModel

<h2>Transfer between accounts</h2>

<div class="row">
    <div class="col-md-6">

        <form asp-controller="Transfer" asp-action="Transfer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransferFromId" class="control-label"></label>
                <input asp-for="TransferFromId" class="form-control" />
                <span asp-validation-for="TransferFromId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransferToId" class="control-label"></label>
                <input asp-for="TransferToId" class="form-control" />
                <span asp-validation-for="TransferToId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary" />
            </div>
            @if (Model.ErrorMessage != null)
            {
                <div class="form-group">
                    <strong class="text-danger">@Model.ErrorMessage</strong>
                </div>
            }
            @if (Model.SuccessMessage != null)
            {
                <div class="form-group">
                    <strong class="text-success">@Model.SuccessMessage</strong>
                </div>
            }
        </form>
    </div>
</div>